@model IEnumerable<E_Commerce.Models.register>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminLayout";
}

<br /><br />
<h1 class="text-center">Manage Users</h1>
<br />

<table class="table table-bordered table-striped text-center mydatatable2">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Address</th>
            <th>Pincode</th>
            <th>State</th>
            <th>District</th>
            <th>Contry</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Password</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int sr = 1;
        }
        @foreach(var x in Model)
        {
            <tr>
                <td>@sr</td>
                <td>@x.fname</td>
                <td>@x.lname</td>
                <td>@x.email</td>
                <td>@x.mobile</td>
                <td>@x.address</td>
                <td>@x.pincode</td>
                <td>@x.state</td>
                <td>@x.district</td>
                <td>@x.country</td>
                <td>@x.gender</td>
                <td>@x.dob</td>
                <td>@x.password</td>
                <td>
                    <a class="btn btn-danger" asp-action="RegisterDelete" asp-route-id="@x.id">Delete</a>
                </td>
            </tr>
            sr++;
        }
    </tbody>
</table>