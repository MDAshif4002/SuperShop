@model IEnumerable<E_Commerce.Models.product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminLayout";
}

<br />
<br />
<h1 class="text-center">Men Product</h1>
<br />
<a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#mencloth">Add New Product</a>
<br />
<br />
<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Description</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int sr = 1;
        }
        @foreach (var x in Model)
        {
            <tr>
                <td>@sr</td>
                <td>
                    <img src="~/menproduct/@x.productimage" style="height:80px;" /><br />
                    @x.productname
                </td>
                <td>@x.description</td>
                <td>@x.price</td>
                <td>@x.discountprice</td>
                <td>
                    <a class="btn btn-danger" asp-action="ManageMenClothDelete" asp-route-id="@x.id">Delete</a>
                </td>
            </tr>
            sr++;
        }
    </tbody>
</table>

<div class="modal fade" id="mencloth">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Product</h4>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="AddMenProduct" enctype="multipart/form-data">
                    Product Name
                    <input type="text" name="productname" required class="form-control" />
                    Upload Product Image
                    <input type="file" name="productimage" required class="form-control" />
                    Description
                    <input type="text" name="description" required class="form-control" />
                    Price
                    <input type="text" name="price" required class="form-control" />
                    Discount Price
                    <input type="text" name="discountprice" required class="form-control" />
                    <br />
                    <button class="btn btn-warning">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>