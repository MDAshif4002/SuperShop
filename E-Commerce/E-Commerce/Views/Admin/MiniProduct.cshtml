@model IEnumerable<E_Commerce.Models.miniproduct>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminLayout";
}
<br /><br />
<h1 class="text-center">Mini Product</h1>
<br />
<a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#miniproduct">Add New Product</a>
<br />
<br />
<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int sr = 1;
        }
        @foreach(var x in Model)
        {
            <tr>
                <td>@sr</td>
                <td>
                    <img src="~/miniproduct/@x.mpropic" style="height:80px;" /><br />
                    @x.title
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="MiniProductDelete" asp-route-id="@x.id">Delete</a>
                </td>
            </tr>
            sr++;
        }
    </tbody>
</table>

<div class="modal fade" id="miniproduct">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Product Image</h4>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="AddMiniProduct" enctype="multipart/form-data">
                    Upload Product Image
                    <input type="file" name="mpropic" required class="form-control" />
                    Title
                    <input type="text" name="title" required class="form-control" />
                    <br />
                    <button class="btn btn-warning">Upload</button>
                </form>
            </div>
        </div>
    </div>
</div>