    .col {
        display: grid;
        grid-template-columns: repeat(6,1fr);
    }
         img {
            height: 200px;
            width: 100%;
        }

    .main {
        height: auto;
        background: white;
        border-radius: 5px;
        margin-left: 25px;
        box-shadow: 5px 5px 5px 5px rgba(0,0,0,0.1);
    }

    .col1 {
        display: grid;
        grid-template-columns: repeat(4,1fr);
    }
</style>

@*Crousel Start*@
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
    <div class="carousel-indicators">
        @{
            int a = 0;
        }
        @foreach(var x in Model.slider)
        {
            @if(a==0)
            {
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@a" class="active"></button>
            }
            else
            {
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@a"></button>
            }
            a++;
        }
    </div>
    <div class="carousel-inner">
        @{
            int b = 1;
        }
        @foreach(var x in Model.slider)
        {
            @if(b == 1)
            {
                <div class="carousel-item active">
                    <img src="~/slider/@x.image" class="d-block w-100" alt="..." style="height:450px;">
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="~/slider/@x.image" class="d-block w-100" alt="..." style="height:450px;">
                </div>
            }
            b++;
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
@*Crousel End*@

<br /><br />
<div class="row">
    @foreach(var x in Model.miniproduct)
    {
        <div class="col-sm-2 text-center">
            <img src="~/miniproduct/@x.mpropic" style="height:100px;width:100px" /><br />
            <b>@x.title</b>
        </div>
    }
</div>
<br /><br />

<h1 class="text-center text-primary">Men Fashions</h1>
<br />
<div class="row mb-5 mt-5">
    <div class="col-sm-3 col1">
        @foreach (var x in Model.product)
        {
            <div class="main">
                <img src="~/menproduct/@x.productimage" style="height:300px; width:300px; border-radius:5px; margin:8px;" />
                <p class="ms-3 fs-5">@x.productname</p>
                <p class="ms-3">@x.description</p>
                <p class="ms-3 fs-5">Price : @x.price <span style="color:gray;">@x.discountprice% OFF</span></p>
                <div class="row d-flex g-1 justify-content-center align-items-center">
                    <div class="col-sm-5">
                        <button class="btn btn-outline-primary w-100 mb-3">Buy Now</button>
                    </div>
                    <div class="col-sm-6">
                        <button class="btn btn-outline-success w-100 mb-3">Add To Cart</button>
                    </div>
                </div>
            </div>
        }  
    </div>
</div>
