@model E_Commerce.Models.register
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_PublicLayout";
}
<style>
    body
    {
        background: #f4f4f9;
    }
    .card
    {
        height:auto;
        width:100%;
        background:white;
    }
</style>

<div class="row mb-5 mt-5 g-3">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="card">
                <h3 class="text-center mt-4">Regiter Here</h3>
            <div class="card-body">
                <form method="post" asp-action="SaveRegister">
                    <div class="row">
                        <div class="col">
                            <label>First Name</label>
                            <input type="text" class="form-control" placeholder="First Name" aria-label="First name" asp-for="fname">
                        </div>
                        <div class="col">
                            <label>Last Name</label>
                            <input type="text" class="form-control" placeholder="Last Name" aria-label="Last name" asp-for="lname">
                        </div>
                    </div>
                    <div class="col">
                        <label for="formGroupExampleInput" class="form-label">Email</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Email" asp-for="email">
                    </div>
                    <div class="col">
                        <label for="formGroupExampleInput" class="form-label">Mobile Number</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Mobile Number" asp-for="mobile">
                    </div>
                    <div class="col">
                        <label for="formGroupExampleInput" class="form-label">Address</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Address" asp-for="address">
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>Pincode</label>
                            <input type="text" class="form-control" placeholder="Pincode" aria-label="First name" asp-for="pincode">
                        </div>
                        <div class="col">
                            <label>State</label>
                            <select class="form-control"asp-for="state">
                                <option value="">Select Your State</option>
                                <option>Uttar Pradesh</option>
                                <option>Madhya Pradesh</option>
                                <option>Maharashtra</option>
                                <option>Telangana</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>District</label>
                            <select class="form-control" asp-for="district">
                                <option value="">Select Your District</option>
                                <option>Pratapgarh</option>
                                <option>Kanpur</option>
                                <option>Jaunpur</option>
                                <option>Lucknow</option>
                            </select>
                        </div>
                        <div class="col">
                            <label>Contry</label>
                            <select class="form-control" asp-for="country">
                                <option value="">Select Your Country</option>
                                <option>India</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <label for="formGroupExampleInput" class="form-label">Gender</label>
                        <select class="form-control" asp-for="gender">
                            <option value="">Select Your Gender</option>
                            <option>Female</option>
                            <option>Male</option>
                            <option>Custom</option>
                        </select>
                    </div>
                    <div class="col">
                        <label for="formGroupExampleInput" class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" id="formGroupExampleInput" placeholder="Date of Birth" asp-for="dob">
                    </div>
                    <div class="col">
                        <label for="formGroupExampleInput" class="form-label">Create a Password</label>
                        <input type="password" class="form-control" id="formGroupExampleInput" placeholder="Create a Password" asp-for="password">
                    </div>
                    <br />
                    <button class="btn btn-primary w-100">Sumbit</button>
                    <p class="text-center mt-2">
                        Already have you registered?
                        <a asp-action="Login">Login</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>